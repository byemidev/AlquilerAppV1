@model AlquileresMVC.Models.Admin.MetodoPago

<h2>Eliminar Método de Pago</h2>

<h3>¿Está seguro de que desea eliminar este método de pago?</h3>
<div>
    <h4>Método de Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Ensure this is the correct property -->
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>