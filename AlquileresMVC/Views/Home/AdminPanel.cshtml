<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrator Panel</title>
    <link href="~/css/PanelAdmin.css" rel="stylesheet" />
    <link rel="icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/plugins/font-awesome/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <link rel="stylesheet" href="~/css/red.css" type="text/css" />
</head>
<body>

    <!-- PAGE HEADER START -->
    <div class="page-header" style="background-color: red;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3 logo">
                    <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="Logo" class="img-responsive"></a>
                </div>
                <div class="col-md-9 d-flex align-items-center justify-content-end">
                    <ul class="nav" style="list-style-type: none; padding: 0; margin: 0; display: flex;">
                        <li style="margin-right: 30px;">
                            <a href="@Url.Action("Index", "Home")" style="text-decoration: none; color: white; font-size: 18px; font-weight: 600; transition: color 0.3s;">Inicio</a>
                        </li>
                        <li style="margin-right: 30px;">
                            <a href="@Url.Action("Vehiculo", "Home")" style="text-decoration: none; color: white; font-size: 18px; font-weight: 600; transition: color 0.3s;">Vehículos</a>
                        </li>

                        <!-- TODO: HACER EL LOGOUT  -->

                        <li>
                            <a href="@Url.Action("Index", "Home")" style="text-decoration: none; color: white; font-size: 18px; font-weight: 600; transition: color 0.3s;">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE HEADER END -->

    <div class="containerAdmin">
        <h1>Panel de Administrator</h1>
        <div class="medium-rectangle-container">
            <div class="medium-rectangle">
                <h3>Usuario</h3>
                <div>
                    <button class="button-78" role="button">Listar</button>
                    <button class="button-78" role="button">Agregar</button>
                    <button class="button-78" role="button">Borrar</button>
                    <button class="button-78" role="button">Actualizar</button>
                </div>
            </div>
            <div class="medium-rectangle">
                <h3>Vehiculo</h3>
                <div>
                    <button class="button-78" role="button">Listar</button>
                    <button class="button-78" role="button">Agregar</button>
                    <button class="button-78" role="button">Borrar</button>
                    <button class="button-78" role="button">Actualizar</button>
                </div>
            </div>
            <div class="medium-rectangle">
                <h3>Extras</h3>
                <div>
                    <button class="button-78" role="button">Listar</button>
                    <button class="button-78" role="button">Agregar</button>
                    <button class="button-78" role="button">Borrar</button>
                    <button class="button-78" role="button">Actualizar</button>
                </div>
            </div>
            <div class="medium-rectangle">
                <h3>Forma de pago</h3>
                <div>
                    <button class="button-78" role="button">Listar</button>
                    <button class="button-78" role="button">Agregar</button>
                    <button class="button-78" role="button">Borrar</button>
                    <button class="button-78" role="button">Actualizar</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
