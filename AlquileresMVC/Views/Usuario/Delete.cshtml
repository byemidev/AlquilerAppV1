@model AlquileresMVC.Models.Admin.Usuario

@{
    Layout = "_AdminBar";
}

<h2>Eliminar Usuario</h2>

<h3>¿Está seguro de que desea eliminar este usuario?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido 1</dt>
        <dd class="col-sm-10">@Model.Apellido1</dd>
        <dt class="col-sm-2">Apellido 2</dt>
        <dd class="col-sm-10">@Model.Apellido2</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.DNI</dd>
        <dt class="col-sm-2">Fecha de expedición del carnet</dt>
        <dd class="col-sm-10">@Model.carnetFechaExpedicion</dd>
        <dt class="col-sm-2">Fecha de nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento</dd>
        <dt class="col-sm-2">Correo electrónico</dt>
        <dd class="col-sm-10">@Model.Correo</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Ensure this is the correct property -->
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>